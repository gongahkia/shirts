# Environment variables for Shirts Legal Workflow

# API Keys - REQUIRED for production
GEMINI_API_KEY=your_gemini_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Security
JWT_SECRET=your_super_secure_jwt_secret_here
API_RATE_LIMIT=100

# Database (if using PostgreSQL instead of in-memory storage)
# POSTGRES_PASSWORD=your_postgres_password_here

# Monitoring (if using Grafana)
# GRAFANA_PASSWORD=your_grafana_admin_password_here

# Frontend URLs (for CORS and WebSocket connections)
FRONTEND_URL=http://localhost:3000

# Development overrides (uncomment for development)
# NODE_ENV=development
# LOG_LEVEL=debug